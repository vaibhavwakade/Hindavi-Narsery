import { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import axios from 'axios';
import { toast } from 'react-toastify';
import { Package, Users, ShoppingBag, Leaf, TrendingUp, ArrowUp, ArrowDown, Calendar, DollarSign } from 'lucide-react';
import { Line, Pie, Bar } from 'react-chartjs-2';
import {
    Chart as ChartJS,
    CategoryScale,
    LinearScale,
    PointElement,
    LineElement,
    ArcElement,
    Title,
    Tooltip,
    Legend,
    BarElement
} from 'chart.js';

// Register ChartJS components
ChartJS.register(
    CategoryScale,
    LinearScale,
    PointElement,
    LineElement,
    ArcElement,
    BarElement,
    Title,
    Tooltip,
    Legend
);

function AdminDashboard() {
    const navigate = useNavigate();
    const [loading, setLoading] = useState(true);
    const [stats, setStats] = useState({
        users: 0,
        orders: 0,
        products: 0,
        categories: 0,
        revenue: 0,
        monthlyData: [],
        categoryData: [],
        recentOrders: []
    });

    useEffect(() => {
        fetchDashboardData();
    }, []);

    const fetchDashboardData = async () => {
        try {
            setLoading(true);
            const token = localStorage.getItem('token');
            if (!token) {
                toast.error('Please login as admin');
                navigate('/login');
                return;
            }

            // Make parallel requests for better performance
            const [usersRes, ordersRes, productsRes, categoriesRes] = await Promise.all([
                axios.get(`${import.meta.env.VITE_BACKEND_URL}/api/admin/users?limit=1`, {
                    headers: { Authorization: `Bearer ${token}` }
                }),
                axios.get(`${import.meta.env.VITE_BACKEND_URL}/api/admin/orders?limit=1`, {
                    headers: { Authorization: `Bearer ${token}` }
                }),
                axios.get(`${import.meta.env.VITE_BACKEND_URL}/api/products?limit=1`, {
                    headers: { Authorization: `Bearer ${token}` }
                }),
                axios.get(`${import.meta.env.VITE_BACKEND_URL}/api/categories`, {
                    headers: { Authorization: `Bearer ${token}` }
                })
            ]);

            // Get recent orders for the table
            const recentOrdersRes = await axios.get(`${import.meta.env.VITE_BACKEND_URL}/api/admin/orders?limit=5`, {
                headers: { Authorization: `Bearer ${token}` }
            });

            // Calculate revenue from orders (assuming there's a totalAmount field)
            const revenue = ordersRes.data.orders.reduce((total, order) => total + (order.totalAmount || 0), 0);

            // Generate monthly data for the past 6 months
            const monthlyData = generateMockMonthlyData();

            // Generate category distribution data
            const categoryData = generateMockCategoryData();

            setStats({
                users: usersRes.data.total || 0,
                orders: ordersRes.data.total || 0,
                products: productsRes.data.total || 0,
                categories: categoriesRes.data.length || 0,
                revenue: revenue,
                monthlyData: monthlyData,
                categoryData: categoryData,
                recentOrders: recentOrdersRes.data.orders || []
            });
        } catch (error) {
            console.error('Error fetching dashboard data:', error);
            toast.error(error.response?.data?.message || 'Failed to load dashboard data');
            if (error.response?.status === 403) {
                navigate('/login');
            }
        } finally {
            setLoading(false);
        }
    };

    // Helper function to generate mock monthly data
    const generateMockMonthlyData = () => {
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
        return {
            labels: months,
            datasets: [
                {
                    label: 'Orders',
                    data: months.map(() => Math.floor(Math.random() * 100) + 20),
                    borderColor: 'rgb(53, 162, 235)',
                    backgroundColor: 'rgba(53, 162, 235, 0.5)',
                    tension: 0.3
                },
                {
                    label: 'Revenue',
                    data: months.map(() => Math.floor(Math.random() * 5000) + 1000),
                    borderColor: 'rgb(34, 197, 94)',
                    backgroundColor: 'rgba(34, 197, 94, 0.5)',
                    tension: 0.3
                }
            ]
        };
    };

    // Helper function to generate mock category data
    const generateMockCategoryData = () => {
        return {
            labels: ['Indoor Plants', 'Outdoor Plants', 'Seeds', 'Tools', 'Fertilizers'],
            datasets: [
                {
                    data: [30, 25, 15, 20, 10],
                    backgroundColor: [
                        'rgba(34, 197, 94, 0.7)',
                        'rgba(53, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 99, 132, 0.7)'
                    ],
                    borderColor: [
                        'rgba(34, 197, 94, 1)',
                        'rgba(53, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }
            ]
        };
    };

    // Format date
    const formatDate = (dateString) => {
        return new Date(dateString).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric'
        });
    };

    if (loading) {
        return (
            <div className="flex items-center justify-center h-96">
                <div className="animate-spin rounded-full h-10 w-10 border-b-2 border-green-500"></div>
            </div>
        );
    }

    return (
        <div className="space-y-8">
            {/* <h1 className="text-2xl font-bold text-gray-800">Dashboard Overview</h1> */}

            {/* Stats Cards */}
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {/* Users Card */}
                <div className="bg-white rounded-xl shadow-md p-6 border border-gray-100 hover:shadow-lg transition-shadow">
                    <div className="flex items-start justify-between">
                        <div>
                            <p className="text-sm text-gray-500 font-medium">Total Users</p>
                            <p className="text-3xl font-bold text-gray-800 mt-1">{stats?.users || 0}</p>
                            <div className="flex items-center mt-2 text-xs text-green-600 font-medium">
                                <ArrowUp className="h-3 w-3 mr-1" />
                                <span>12% from last month</span>
                            </div>
                        </div>
                        <div className="p-3 bg-blue-100 rounded-lg">
                            <Users className="h-6 w-6 text-blue-600" />
                        </div>
                    </div>
                </div>

                {/* Products Card */}
                <div className="bg-white rounded-xl shadow-md p-6 border border-gray-100 hover:shadow-lg transition-shadow">
                    <div className="flex items-start justify-between">
                        <div>
                            <p className="text-sm text-gray-500 font-medium">Total Products</p>
                            <p className="text-3xl font-bold text-gray-800 mt-1">{stats?.products || 0}</p>
                            <div className="flex items-center mt-2 text-xs text-green-600 font-medium">
                                <ArrowUp className="h-3 w-3 mr-1" />
                                <span>8% from last month</span>
                            </div>
                        </div>
                        <div className="p-3 bg-green-100 rounded-lg">
                            <Package className="h-6 w-6 text-green-600" />
                        </div>
                    </div>
                </div>

                {/* Orders Card */}
                <div className="bg-white rounded-xl shadow-md p-6 border border-gray-100 hover:shadow-lg transition-shadow">
                    <div className="flex items-start justify-between">
                        <div>
                            <p className="text-sm text-gray-500 font-medium">Total Orders</p>
                            <p className="text-3xl font-bold text-gray-800 mt-1">{stats?.orders || 0}</p>
                            <div className="flex items-center mt-2 text-xs text-green-600 font-medium">
                                <ArrowUp className="h-3 w-3 mr-1" />
                                <span>15% from last month</span>
                            </div>
                        </div>
                        <div className="p-3 bg-purple-100 rounded-lg">
                            <ShoppingBag className="h-6 w-6 text-purple-600" />
                        </div>
                    </div>
                </div>

                {/* Categories Card */}
                <div className="bg-white rounded-xl shadow-md p-6 border border-gray-100 hover:shadow-lg transition-shadow">
                    <div className="flex items-start justify-between">
                        <div>
                            <p className="text-sm text-gray-500 font-medium">Categories</p>
                            <p className="text-3xl font-bold text-gray-800 mt-1">{stats?.categories || 0}</p>
                            <div className="flex items-center mt-2 text-xs text-gray-600 font-medium">
                                <Leaf className="h-3 w-3 mr-1" />
                                <span>Plant variety</span>
                            </div>
                        </div>
                        <div className="p-3 bg-yellow-100 rounded-lg">
                            <Leaf className="h-6 w-6 text-yellow-600" />
                        </div>
                    </div>
                </div>
            </div>

            {/* Charts Section */}
            <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
                {/* Line Chart - Monthly Orders & Revenue */}
                <div className="lg:col-span-2 bg-white p-6 rounded-xl shadow-md border border-gray-100">
                    <h2 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                        <TrendingUp className="h-5 w-5 mr-2 text-green-600" />
                        Monthly Performance
                    </h2>
                    <div className="h-64">
                        <Line
                            data={stats?.monthlyData || []}
                            options={{
                                responsive: true,
                                maintainAspectRatio: false,
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                },
                                plugins: {
                                    legend: {
                                        position: 'top',
                                    }
                                }
                            }}
                        />
                    </div>
                </div>

                {/* Pie Chart - Product Categories Distribution */}
                <div className="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                    <h2 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                        <Leaf className="h-5 w-5 mr-2 text-green-600" />
                        Product Categories
                    </h2>
                    <div className="h-64 flex items-center justify-center">
                        <Pie
                            data={stats?.categoryData || []}
                            options={{
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: {
                                        position: 'bottom',
                                    }
                                }
                            }}
                        />
                    </div>
                </div>
            </div>

            {/* Revenue Stats */}
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                {/* Total Revenue */}
                <div className="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                    <h2 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                        <DollarSign className="h-5 w-5 mr-2 text-green-600" />
                        Total Revenue
                    </h2>
                    <div className="flex items-center justify-between">
                        <div>
                            <p className="text-4xl font-bold text-gray-800">₹{(stats?.revenue || 0).toLocaleString()}</p>
                            <p className="text-sm text-gray-500 mt-1">Lifetime earnings</p>
                        </div>
                        <div className="p-4 bg-green-100 rounded-lg">
                            <TrendingUp className="h-8 w-8 text-green-600" />
                        </div>
                    </div>
                    <div className="mt-6">
                        <div className="flex items-center justify-between mb-2">
                            <p className="text-sm font-medium text-gray-600">Monthly Target</p>
                            <p className="text-sm font-medium text-green-600">85%</p>
                        </div>
                        <div className="w-full bg-gray-200 rounded-full h-2">
                            <div className="bg-green-600 h-2 rounded-full" style={{ width: '85%' }}></div>
                        </div>
                    </div>
                </div>

                {/* Sales by Product Type */}
                <div className="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                    <h2 className="text-lg font-bold text-gray-800 mb-4 flex items-center">
                        <Package className="h-5 w-5 mr-2 text-green-600" />
                        Sales by Product Type
                    </h2>
                    <div className="h-64">
                        <Bar
                            data={{
                                labels: ['Indoor', 'Outdoor', 'Seeds', 'Tools', 'Fertilizers'],
                                datasets: [
                                    {
                                        label: 'Sales',
                                        data: [4200, 3500, 1800, 2600, 1200],
                                        backgroundColor: 'rgba(34, 197, 94, 0.6)',
                                        borderColor: 'rgb(34, 197, 94)',
                                        borderWidth: 1
                                    }
                                ]
                            }}
                            options={{
                                responsive: true,
                                maintainAspectRatio: false,
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                }
                            }}
                        />
                    </div>
                </div>
            </div>

            {/* Recent Orders */}
            <div className="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                <div className="flex items-center justify-between mb-4">
                    <h2 className="text-lg font-bold text-gray-800 flex items-center">
                        <Calendar className="h-5 w-5 mr-2 text-green-600" />
                        Recent Orders
                    </h2>
                    <button
                        onClick={() => navigate('orders')}
                        className="text-green-600 hover:text-green-800 text-sm font-medium"
                    >
                        View All
                    </button>
                </div>
                <div className="overflow-x-auto">
                    <table className="min-w-full divide-y divide-gray-200">
                        <thead className="bg-gray-50">
                            <tr>
                                <th scope="col" className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Order ID
                                </th>
                                <th scope="col" className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Customer
                                </th>
                                <th scope="col" className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Date
                                </th>
                                <th scope="col" className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                                <th scope="col" className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Amount
                                </th>
                            </tr>
                        </thead>
                        <tbody className="bg-white divide-y divide-gray-200">
                            {stats && stats.recentOrders && stats.recentOrders.length > 0 ? (
                                stats.recentOrders.map(order => (
                                    <tr key={order.id} className="hover:bg-gray-50">
                                        <td className="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">
                                            #{order.id}
                                        </td>
                                        <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            {order.user?.name || 'Anonymous'}
                                        </td>
                                        <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            {formatDate(order.createdAt)}
                                        </td>
                                        <td className="px-6 py-4 whitespace-nowrap">
                                            <span className={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                        ${order.status === 'delivered' ? 'bg-green-100 text-green-800' :
                                                    order.status === 'shipped' ? 'bg-blue-100 text-blue-800' :
                                                        order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                                            order.status === 'cancelled' ? 'bg-red-100 text-red-800' :
                                                                'bg-gray-100 text-gray-800'}`}>
                                                {order.status?.charAt(0).toUpperCase() + order.status?.slice(1)}
                                            </span>
                                        </td>
                                        <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            ₹{order.totalAmount?.toFixed(2) || '0.00'}
                                        </td>
                                    </tr>
                                ))
                            ) : (
                                <tr>
                                    <td colSpan={5} className="px-6 py-4 text-center text-sm text-gray-500">
                                        No recent orders found
                                    </td>
                                </tr>
                            )}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    );
}

export default AdminDashboard;